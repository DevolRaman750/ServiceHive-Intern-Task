# ============================================
# GigFlow Server Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit the actual .env file to git!
# ============================================

# --------------------------------------------
# MongoDB Connection String
# --------------------------------------------
# Get this from MongoDB Atlas (https://www.mongodb.com/atlas)
# 1. Create a free cluster
# 2. Click "Connect" > "Connect your application"
# 3. Copy the connection string and replace <password> with your DB user password
#
# For local MongoDB, use: mongodb://localhost:27017/gigflow
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/gigflow?retryWrites=true&w=majority

MONGO_URI=mongodb://localhost:27017/gigflow

# --------------------------------------------
# JWT Secret Key
# --------------------------------------------
# This is used to sign and verify JWT tokens for authentication
# Generate a strong random string (at least 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# IMPORTANT: Keep this secret! Anyone with this key can forge authentication tokens

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# --------------------------------------------
# Server Port
# --------------------------------------------
# The port on which the Express server will run
# Default: 5000
# Note: Frontend (Vite) runs on 5173 by default

PORT=5000
